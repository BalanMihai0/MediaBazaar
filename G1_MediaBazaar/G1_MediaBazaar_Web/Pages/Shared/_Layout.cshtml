<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - G1_MediaBazaar_Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/G1_MediaBazaar_Web.styles.css" asp-append-version="true" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body class="min-vh-100 mb-0" style="max-width: 100%;">
	@if (!Context.Request.Path.Equals("/LogInPage", StringComparison.OrdinalIgnoreCase))
	{
		<header>
			<nav class="navbar navbar-dark navbar-expand-sm bg-primary border-bottom">
				<div class="container-fluid">
					<a class="navbar-brand" asp-page="/Index">
						<img src="./Images/mediabazaarlogoblack.png" width=auto height="70px" class="d-inline-block align-top" alt="MediaBazaar Logo">
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-page="/Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-page="/Schedule">Schedule</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-page="/Availability">Availability</a>
							</li>
						</ul>
						<ul class="navbar-nav d-flex flex-grow-1 flex-md-row-reverse">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-page="/ProfilePage">Profile</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-page="/LogOut">Log Out</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		@*<div class="container">*@
		<main role="main">
			@RenderBody()
		</main>
		@*</div>*@

		<footer class="footer text-muted">
			<div class="container">
			</div>
		</footer>
	}
	else
	{
		@*<div class="bg-gray">*@
		<main role="main">
			@RenderBody()
		</main>
		@*</div>*@
	}



	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>